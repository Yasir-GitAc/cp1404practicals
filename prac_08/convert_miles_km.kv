BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    TextInput:
        id: input_miles
        text: '0'
        multiline: False
        on_text: app.handle_calculate()

    Label:
        text: app.output_text
        id: output_label
        color: 1, 1, 0, 1
        font_size: 32

    BoxLayout:
        size_hint_y: None
        height: '40dp'
        spacing: 10

        Button:
            text: "Up"
            on_press: app.handle_increment(1)
        Button:
            text: "Down"
            on_press: app.handle_increment(-1)
